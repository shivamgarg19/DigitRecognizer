<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#aacccccc" />
            <gradient android:angle="-90" android:startColor="#aad1d1d1" android:endColor="#aa9c9c9c"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#aacccccc" />
            <solid android:color="#d6d6d6"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#aacccccc" />
            <gradient android:angle="-90" android:startColor="#aad6d6d6" android:endColor="#aabababa" />
        </shape>
    </item>
</selector>